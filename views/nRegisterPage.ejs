        /* Import your common styles from ResponsiveHomepage.css */

/* Specific styles for the login page */
body {
    background-image: linear-gradient(rgba(4, 9, 30, 0.7), rgba(4, 9, 30, 0.7)), url(psit_kanpur.jpg);
    background-position: center;
    background-size: cover;
    background-attachment: fixed; /* Fixed background image */
}

.login-box {
    text-align: center;
    background-color: rgba(65, 63, 63, 0.614); /* Semi-transparent background */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    margin: 0 auto;
    width: 80%;
    max-width: 400px; /* Adjust the maximum width as needed */
}

.login-box h1 {
    /* font-family: 'Quicksand', sans-serif; */
    color: #2ecc70;
    font-size: 40px;
    margin-bottom: 20px;
}

.login-form input {
    width: 100%;
    margin: 10px 0;
    padding: 10px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    background-color: rgba(254, 254, 254, 0.107); /* Semi-transparent input background */
    color: #fff;
}

.login-form button {
    width: 100%;
    padding: 12px;
    font-size: 18px;
    background: #2ecc70;
    border: none;
    border-radius: 5px;
    color: #fff;
    cursor: pointer;
    transition: background 0.5s;
}

.login-form button:hover {
    background: #2ecc70c7; /* Slightly transparent on hover */
}


